<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
    tools:context=".Register">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Kí"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/userdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/tentaikhoan"/>
    <EditText
        android:id="@+id/passdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/matkhau"/>
    <EditText
        android:id="@+id/passnhaplai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/nhaplaipass"/>
    <EditText
        android:id="@+id/tendk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/tendangki"/>
    <EditText
        android:id="@+id/sdtdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/sdt"/>

    <EditText
        android:id="@+id/diatri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/que"/>
    <Button
        android:id="@+id/btndk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dang kí"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="#95BD3F3F"
        />



</LinearLayout>