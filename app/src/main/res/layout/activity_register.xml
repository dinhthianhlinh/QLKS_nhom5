<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Register">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="150dp"
     android:background="@drawable/img"
       />
    <EditText
        android:id="@+id/userdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/tentaikhoan"/>
    <EditText
        android:id="@+id/passdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/matkhau"/>
    <EditText
        android:id="@+id/passnhaplai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/nhaplaipass"/>
    <EditText
        android:id="@+id/tendk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/tendangki"/>
    <EditText
        android:id="@+id/sdtdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/sdt"/>

    <EditText
        android:id="@+id/diatri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/que"/>
    <Button
        android:id="@+id/btndk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign up "
        android:textSize="15dp"
        android:textColor="@color/white"

        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="@color/black"
        />



</LinearLayout>