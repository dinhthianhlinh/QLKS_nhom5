<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtsophong"
                android:layout_width="50dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:src="@drawable/qlp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/txttenkhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtsodienthoaikhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/txtemailkhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/txtsoluongnguoikhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/txtcheckinkhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/txtcheckoutkhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/txttongtienkhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/txtsophongkhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/txtthongtinthanhtoankhnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>



        </LinearLayout>



</LinearLayout>