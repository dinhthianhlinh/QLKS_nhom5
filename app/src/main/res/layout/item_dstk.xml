<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_Avata"
            android:layout_width="74dp"
            android:layout_height="69dp"
            android:src="@drawable/android" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/txttentk_DSTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtmatkhau_DSTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/txthovaten_DSTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/txtsdt_DSTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/txtquequan_DSTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/btnDelete_DSTK"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:background="@drawable/baseline_delete_24"

                />
            <ImageButton
                android:id="@+id/btnEdit_DSTK"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:background="@drawable/baseline_edit_24"
                />



        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>